<% puts request[:REQUEST_PATH] %>
<% if participant.get_hyperlinks.length > 0 %>
	<%= render :partial => 'submitted_content/hyperlink', :locals => {:participant => participant} %>
<% end %>
<% if stage != "Complete" and controller.controller_name == 'submitted_content' %>
  <% form_tag :action=>'submit_hyperlink', :id => participant.id do %> 
	 <b>Submit a hyperlink:</b>
   <input type="text" name="submission" size=40 value="http://"><input type="submit" name="upload_link" value="Upload link"/>
	<% end %>
<% end %>

<% google_auth = false %>
<% @auths.each do |entry| %>
    <% if entry.provider.titleize == "Google Oauth2" %>
        <% google_auth = true %>
    <% end %>
<% end %>
<% if stage != "Complete" and controller.controller_name == 'submitted_content' %>
    <br/><b>Google documents: </b> In order to import documents from your Google account, you must authorize Expertiza to access your account.<br/>
    Click google icon for authorization.
    Note: If you are seeing errors while attempting to submit a document, try re-authenticating with Google.<br/>
    <%= link_to (image_tag 'google_oauth2_64.png'), url_for("/auth/google_oauth2?id=#{params[:id]}")%><br/>
    <% if google_auth %>
        <%= link_to "Add a Google Doc", :controller => 'google_doc',
                :action => 'index',
                :participant_id => participant.id %>
        <% end %>
<% end %>
<br/>

<% if participant.assignment.wiki_type_id == 1%>
  <%= render :partial => 'submitted_files', :locals => {:participant => participant, :stage => stage} %>
    <br/><br/><br/><b>
    <%= link_to "Code Review Dashboard" , :controller => 'review_files',
                :action => 'show_all_submitted_files',
                :participant_id => participant.id,
                :stage => stage %>
    </b><br/>
<% else %> 
  <%= render :partial => 'submitted_content/wiki', :locals => {:participant => participant} %>
<% end %>
<br/>
